<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ofreser_certificados_wizard_form_view" model="ir.ui.view">
            <field name="name">ofreser.certificados_wizard_form_view</field>
            <field name="model">ofreser.certificados_wizard</field>
            <field name="arch" type="xml">
                <form string="Certificados">
                    <sheet>
                        <group col="4">
                            <field name="desde" colspan="2"/>
                            <field name="hasta" colspan="2"/>
                        </group>
                        <button type="object" name="crear_certificados" string="Crear Certificados" class="oe_higlight oe_btn"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="ofreser_certificados_wizard_action" model="ir.actions.act_window">
            <field name="name">Certificados</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ofreser.certificados_wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
        </record>

    </data>
</odoo>